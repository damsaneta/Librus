<Window x:Class="Librus.Widoki.PanelLogowania"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel logowania" Height="320" Width="500" Background="#1d1d1d">
    <Window.Resources>
        <Style x:Key="buttonStyle" >
            <Setter Property="Control.FontFamily" Value=" Segoe Ui Light" />
            <Setter Property="Control.FontSize" Value="18" />
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.Background" Value="#1ba1e2"/>
            <Setter Property="Control.BorderBrush" Value="#1ba1e2"/>

        </Style>
        <Style x:Key="labelStyle">
            <Setter Property="Control.FontFamily" Value="Segoe Ui Light" />
            <Setter Property="Control.FontSize" Value="14" />
            <Setter Property="Control.Foreground" Value="White"/>
        </Style>
        <Style x:Key="txtStyle">
            <Setter Property="Control.FontFamily" Value="Segoe Ui Light" />
            <Setter Property="Control.FontSize" Value="14" />
            <Setter Property="Control.Foreground" Value="Black"/>
            <Setter Property="Control.VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="errStyle">
            <Setter Property="Control.FontFamily" Value="Segoe Ui Light" />
            <Setter Property="Control.FontSize" Value="14" />
            <Setter Property="Control.Foreground" Value="Yellow"/>
            <Setter Property="Control.Visibility" Value="Hidden"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="109"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblLogin" Style="{StaticResource labelStyle}" Content="Login:" HorizontalAlignment="Right" Margin="0,30,10,30" VerticalAlignment="Center" Height="30" Width="46"/>
        <Label x:Name="lblHaslo" Style="{StaticResource labelStyle}" Content="Hasło:" HorizontalAlignment="Right" Margin="0,32,10,30" Grid.Row="1" VerticalAlignment="Center" Height="28" Width="46"/>
        <TextBox x:Name="txtLogin" Style="{StaticResource txtStyle}" Grid.Column="1" HorizontalAlignment="Stretch" Height="30" Margin="0,30,30,30" TextWrapping="NoWrap" 
                 VerticalAlignment="Center" Width="Auto" TextChanged="TextBoxLogin_TextChanged" />
        <TextBox x:Name="txtHaslo" Style="{StaticResource txtStyle}" Grid.Column="1" HorizontalAlignment="Stretch" Height="30" Margin="0,30,30,30" Grid.Row="1" 
                 TextWrapping="NoWrap" VerticalAlignment="Center" Width="Auto" TextChanged="TextBoxHaslo_TextChanged"  />
        <Label x:Name="errHaslo"  Style="{StaticResource errStyle}" Grid.Column="1" Height="30"  HorizontalAlignment="Stretch" Margin="0,0,30,0" Grid.Row="1" VerticalAlignment="Bottom"/>
        <Label x:Name="errLogin"  Style="{StaticResource errStyle}" Grid.Column="1" Height="30" HorizontalAlignment="Stretch" Margin="0,0,30,0" Grid.Row="0" VerticalAlignment="Bottom"/>
        <Button x:Name="btnZaloguj" Content="ZALOGUJ" Height="40" Style="{StaticResource buttonStyle }" 
                VerticalAlignment="Bottom"  Padding="0" Grid.Row="2" Grid.Column="1" Margin="69,0,47,33" Click="Zaloguj_Click"/>
        <Button x:Name="btnAnuluj" Content="ANULUJ" Height="40" Style="{StaticResource buttonStyle }"  
                VerticalAlignment="Bottom"  Padding="0"  Grid.Row="2" Grid.Column="0" Margin="61,0,0,33" Click="Anuluj_Click"/>
    </Grid>
</Window>
