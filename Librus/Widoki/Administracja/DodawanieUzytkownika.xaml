<Window x:Class="Librus.Widoki.Administracja.DodawanieUzytkownika"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DodawanieUzytkownika" Height="600" Width="600">
    <!--<StackPanel VerticalAlignment="Bottom" Margin="20,20,20,50">-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lblImie" Content="Imię:" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center"/>
        <Label x:Name="lblNazwisko" Content="Nazwisko:" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="txtImie" Grid.Column="1" HorizontalAlignment="Stretch" Height="23" Margin="0,0,30,0" TextWrapping="NoWrap" 
                 VerticalAlignment="Center" Width="Auto"/>
        <TextBox x:Name="txtNazwisko" Grid.Column="1" HorizontalAlignment="Stretch" Height="23" Margin="0,0,30,0" Grid.Row="1" TextWrapping="NoWrap" 
                 VerticalAlignment="Center" Width="Auto"/>
        <Label Content="e-mail" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="txtEmail" Grid.Column="1" HorizontalAlignment="Stretch" Height="23" Margin="10,0,0,0" Grid.Row="2" TextWrapping="NoWrap" Text="TextBox" VerticalAlignment="Center" 
                 Width="Auto"/>
        <Label x:Name="lblRola" Content="Rola" HorizontalAlignment="Right" Margin="0,0,10,0" Grid.Row="3" VerticalAlignment="Center"/>
        <ComboBox HorizontalAlignment="Left" Margin="10,48,0,0" Grid.Row="3" VerticalAlignment="Top" Width="355" Grid.Column="1"/>
    </Grid>
    <!--<Button Content="Dodaj"  VerticalAlignment="Bottom" Padding="0" Margin="20"/>
    </StackPanel>-->
</Window>
